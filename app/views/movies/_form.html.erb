<div class= "box-container" align="center">
  <div id="<%= dom_id movie %>">
<%= form_with(model: movie) do |form| %>
  <% if movie.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(movie.errors.count, "error") %> prohibited this movie from being saved:</h2>

      <ul>
        <% movie.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :name, "<strong>Name</strong>".html_safe, style: "display: block;" %>
    <%= form.text_field :name %>
  </div>
<br>
  <div>
    <%= form.label :release_date, "<strong>Release date</strong>".html_safe, style: "display: block" %>
    <%= form.date_field :release_date %>
  </div>
<br>
  <div class="field">
    <%= form.label :image, "<strong>Image</strong>".html_safe %>
    <%= form.file_field :image %>
  </div>
<br>
  <div>
    <%= form.submit class: "btn btn-primary btn-sm" %>
  </div>
<% end %>
  </div>
</div>


<style>
    /* Define styles for the container */
    .box-container {
        width: 300px; /* Set the width of the box */
        height: 350px; /* Set the height of the box */
        border: 1px solid black; /* Add a border */
        padding: 20px; /* Add some padding inside the box */
        margin: 20px; /* Add margin to create space between containers */
        background-color: rgb(224,255,255,0.7);
        border-radius: 10px; /* Add rounded corners */
        color: #000000;
        align-content: center;
        font-size: 17px;

    }
</style>